# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf

# CSS files
*.css text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archives
*.zip binary
*.tar.gz binary
*.rar binary

# Exclude from archives
/.gitattributes export-ignore
/.gitignore export-ignore
/.editorconfig export-ignore
/README.md export-ignore
/composer.lock export-ignore
/package-lock.json export-ignore
/pnpm-lock.yaml export-ignore
